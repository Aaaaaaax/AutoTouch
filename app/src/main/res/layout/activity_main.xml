<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/floatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="悬浮窗："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/floatState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/floatStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启"
        app:layout_constraintLeft_toRightOf="@+id/floatState"
        app:layout_constraintBaseline_toBaselineOf="@+id/floatState"/>

    <TextView
        android:id="@+id/accessState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/floatState"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/accessStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启"
        app:layout_constraintLeft_toRightOf="@+id/accessState"
        app:layout_constraintBaseline_toBaselineOf="@+id/accessState"/>

</androidx.constraintlayout.widget.ConstraintLayout>